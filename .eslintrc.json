{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "strict": [
            "error",
            "global"
        ],
        "camelcase": "error",
        "comma-spacing": [
            "error", {
                "before": false,
                "after": true
            }
        ],
       "no-extra-parens": "error",
        "default-case": "error",
        "no-alert": "error"
    }
}
